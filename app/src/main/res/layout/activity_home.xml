<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.shanika.expensetracker.Home">


    <LinearLayout

        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/gg"
        android:backgroundTintMode="screen"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:weightSum="1"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/nav"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:background="@drawable/ic_menu_red_900_24dp"
            android:baselineAlignBottom="false"
            android:contextClickable="true"
            android:cropToPadding="false"
            android:elevation="0dp"
            android:onClick="navigation.setVisible(true)"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_menu_red_900_24dp" />

        <ImageButton
            android:id="@+id/back"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="-50dp"
            android:background="@drawable/ic_keyboard_arrow_left_red_900_24dp"
            android:baselineAlignBottom="false"
            android:contextClickable="true"
            android:cropToPadding="false"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_red_900_24dp" />

        <TextView

            android:id="@+id/glance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Quick Glance"
            android:textColor="#0c2cbb"
            android:textColorLink="@android:color/holo_orange_dark"
            android:textDirection="firstStrongRtl"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:layout_marginLeft="-45dp"
            android:layout_weight="0.30"
            android:adjustViewBounds="true"

            android:background="@drawable/calenderred"
            android:cropToPadding="true"
            android:elevation="0dp"
            android:scaleType="fitCenter" />


        <ImageButton
            android:id="@+id/settings"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_settings_red_900_18dp"
            android:cropToPadding="true"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />


    </LinearLayout>

    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/desc"
                android:layout_width="385dp"
                android:layout_height="224dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/overall"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/orange"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:text="Overall description for month September"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/in"
                        android:layout_width="179dp"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="textPersonName"
                        android:text=" Total Income"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/income"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="#cec3c3"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="textPersonName"
                        android:text=" :"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/re"
                        android:layout_width="179dp"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="textPersonName"
                        android:text=" Remaining Amount"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/remaining"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.00"
                        android:background="#cec3c3"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="textPersonName"
                        android:text=" :"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/ex"
                        android:layout_width="179dp"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="textPersonName"
                        android:text=" Total Expense"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/expense"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:background="#cec3c3"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="textPersonName"
                        android:text=" :"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/bal"
                        android:layout_width="179dp"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="textPersonName"
                        android:text=" Balance"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="202dp"
                        android:layout_height="40dp"

                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.73"
                        android:background="#cec3c3"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="textPersonName"
                        android:text=" :"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/grap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/graphTitle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/orange"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:text="Graphical Distribution"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/graph"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:srcCompat="@android:drawable/presence_online" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@android:color/holo_blue_bright"
        android:visibility="invisible"
        app:menu="@menu/sidebar_navigation" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/navigation_item"

        />

</android.support.design.widget.CoordinatorLayout>
