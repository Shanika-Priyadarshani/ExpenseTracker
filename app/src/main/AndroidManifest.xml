                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AddExpenseRecord"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.shanika.expensetracker.AddExpenseRecord" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Calculator"
        android:configChanges="orientation"
        android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.shanika.expensetracker.Calculator" />

                <category android:name="android.intent.category.DEFAULT" />
